<%= render 'navbar' %>
  

<ul class="grid grid-cols-1 gap-6 px-6 mt-10 sm:grid-cols-2 lg:grid-cols-3">
  <% @articles.each do |article| %>
  <li class="col-span-1 bg-white rounded-lg shadow divide-y divide-gray-200">
    <div class="w-full flex items-center justify-between p-6 space-x-6">
      <div class="flex-1 truncate">
          <span class="flex-shrink-0 ml-2 mb-2 inline-block px-2 py-0.5 text-green-800 text-xs font-medium bg-green-100 rounded-full"><%= article.category %></span>
        <div class="flex items-center space-x-3">
          <h3 class="text-gray-900 text-sm font-medium truncate"> <%= article.title  %></h3>
        </div>
        <p class="mt-1 text-gray-500 text-sm truncate"><%= article.updated_at %></p>
      </div>
      <img class="w-10 h-10 bg-gray-300 rounded-full flex-shrink-0" src="<%= article.photo.url%>" alt="">
    </div>
    <div>
      <div class="-mt-px flex divide-x divide-gray-200">
        <div class="w-0 flex-1 flex">
          <a href="/admin/article/<%=article.id%>" class="relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500">
            <span class="ml-3">Modifier</span>
          </a>
        </div>
        <div class="-ml-px w-0 flex-1 flex">
          <a href=" /admin/article/<%=article.id%>/comments" class="relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500">
            <span class="ml-3">Commentaires</span>
          </a>
        </div>
      </div>
    </div>
  </li>
  <% end %>

  <!-- More people... -->
</ul>