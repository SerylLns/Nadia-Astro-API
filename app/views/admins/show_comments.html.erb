<%= render  "navbar" %>
<h1 class="text-center my-5 font-medium text-4xl text-indigo-900"><%= @article.title %></h1>
<div class="flex flex-col mt-6">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class=" overflow-hidden sm:rounded-lg">
        <table class="w-3/4 mx-auto divide-y divide-gray-200">
          <thead class="bg-gray-200">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Pseudo
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Message
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y  divide-gray-200">
          <% @comments.each do |comment| %>
            <tr class="border-b border-gray-300">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= comment.pseudo %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= comment.content %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Modifier", edit_comment_path(comment.id), class: "text-indigo-600 hover:text-indigo-900 mr-3"  %>
                <%= link_to "Supprimer", delete_comment_path(comment.id), method: :delete, class: "text-red-600 hover:text-red-900"  %>
              </td>
            </tr>
          <% end %>
            <!-- More people... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>